/*

5. Faça um procedimento que exiba na tela a tabuada do número n passado por parâmetro. 
Saída: Exemplo para n=5 -> 5X1=5; 5X2=10; 5X3=15; ... ; 5X10=50. 

*/

#include <iostream>
#include <locale.h>
using namespace std;


void leituraTabuada (int n){
    
    for(int i = 1; i<=10; i++){
        int result = n * i; 
        cout<<n<<"x"<<i<<"= "<<result<<endl;
    }
}

int main()
{
    int number;
    cout<<"Digite um número inteiro"<<endl;
    cin>>number;
    leituraTabuada(number);
    
    
    
    return 0;
}
