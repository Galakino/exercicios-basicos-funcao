/*

8. Faça uma função que solicita a idade de 10 pessoas e retorne a quantidade de pessoas que 
possui idade maior ou igual a 18 anos.

*/

#include <iostream>
#include <locale.h>
using namespace std;


int idade(){
    int idade = 0;
    int cont = 0;
    
    for(int i = 1; i<=10; i++){
        cout<<"Digite uma idade: ";
        cin>>idade;
        
        if(idade >= 18){
            cont++;
        }
    }
    
    return cont;
    
}

int main()
{
    int result = idade();
    
    cout<<"\nQuantidade de pessoas que possui idade maior ou igual a 18: "<<result;
    
    
    return 0;
}
