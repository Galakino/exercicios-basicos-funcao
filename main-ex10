/* 

10. Faça uma função/procedimento que solicita o peso de 25 pessoas e atribui o maior e o menor 
peso dentre os digitados. Exiba o maior e o menor peso no programa principal.

*/

#include <iostream>
using namespace std;


void verificaPeso(float &maior, float &menor){
    int peso;
    for(int i = 1; i <= 3; i++){ //numero de pessoas
    
        cout<<"Digite o peso "<< i <<": ";
        cin>>peso;
        
        if(i==1){
            maior = peso;
            menor = peso;
        }
        
        if(peso > maior){
            maior = peso;
        } 
        
        if(peso < menor){
            menor = peso;
        }
    }
}


int main(){
    
    float maior, menor;
    
    verificaPeso(maior, menor);
    cout<<"O maior peso que esta entre essas pessoas é de: "<<maior<<" kg";
    cout<<"O menor peso que esta entre essas pessoas é de: "<<menor<<" kg";
    
    return 0;
}
